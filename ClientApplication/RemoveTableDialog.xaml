<Window x:Class="ClientApplication.RemoveTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RemoveTableDialog" Height="200" Width="300">
    <Grid>
        <Button Content="Remove" HorizontalAlignment="Left" Margin="56,113,0,0" VerticalAlignment="Top" Height="34" Width="82" Click="Button_Remove" IsDefault="True"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="165,113,0,0" VerticalAlignment="Top" Height="34" Width="82" IsCancel="True"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="28,66,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TableName" HorizontalAlignment="Left" Margin="95,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" Text="Table"/>
        <Label Content="Enter table parameters:" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
    </Grid>
</Window>